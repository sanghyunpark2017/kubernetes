
#일단 tomcat은 official 도커 이미지 사용하는 것으로 하여 테스트 한다.
#wasadm계정으로 구동하는 것은 DOCKERFILE로 부터 make해야 하며 필요시 나중에 실행


docker run -dit --name "mytomcat" reg.hmp.com:443/mycentos7beta:1

docker exec -it mytomcat /bin/bash

