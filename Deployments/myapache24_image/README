
#전체 내용 CHANGEME  이름 변경


---------------------------------------------------------------------------------------
apiVersion: apps/v1
kind: Deployment
metadata:
  name: CHANGEME-deployment
  namespace: default
  labels:
    app: CHANGEME
    tier: frontend
    role: httpd
    deployment: v1
spec:
  replicas: 1
  selector:
    matchLabels:
      app: CHANGEME
      tier: frontend
      role: httpd
      deployment: v1
  template:
    metadata:
      labels:
        app: CHANGEME
        tier: frontend
        role: httpd
        deployment: v1
    spec:
      containers:
      - name: CHANGEME-deployment-pod
        image: reg.hmp.com/myapache24beta:2
        ports:
        - containerPort: 80
        resources:
          limits:
            memory: "200Mi"
          requests:
            memory: "100Mi"
        command: ["/app/apache24/bin/apachectl", "-D", "FOREGROUND"]
#        args: [-]
        volumeMounts:
        - mountPath: /app/apache24/conf/httpd.conf
          name: file1
        - mountPath: /app/webapps
          name: directory1
        - mountPath: /logs/web
          name: directory2
      volumes:
      - name: file1
        hostPath:
          path: /vol/private/CHANGEME/app/apache24/conf/httpd.conf
          type: File
      - name: directory1
        hostPath:
          path: /vol/private/CHANGEME/app/webapps
          type: Directory
      - name: directory2
        hostPath:
          path: /vol/private/CHANGEME/logs/web
          type: Directory
---------------------------------------------------------------------------------------

#yum install -y unzip

mkdir -p /vol/private/CHANGEME
cd /vol/private/CHANGEME
wget http://10.10.63.63:8089/myapache24beta.zip
unzip myapache24beta.zip
rm myapache24beta.zip










