
###################
NFS서버 설치
###################

yum -y install nfs*

systemctl enable rpcbind
systemctl enable nfs-server
systemctl enable nfs-lock
systemctl enable nfs-idmap

systemctl start rpcbind
systemctl start nfs-server
systemctl start nfs-lock
systemctl start nfs-idmap

mkdir -p /nfs/public
mkdir -p /nfs/private

chmod -R 777 /nfs/public
chmod -R 777 /nfs/private

vi /etc/exports
/nfs/public 10.10.64.0/24(rw,sync,no_root_squash,no_all_squash)
/nfs/private 10.10.64.0/24(rw,sync,no_root_squash,no_all_squash)

yum install firewalld
systemctl enable firewalld

systemctl start firewalld

firewall-cmd --permanent --zone=public --add-service=nfs
firewall-cmd --permanent --zone=public --add-service=mountd
firewall-cmd --permanen --zone=public --add-service=rpc-bind
firewall-cmd --reload
systemctl status firewalld

showmount -e 127.0.0.1

systemctl restart  rpcbind.service
systemctl status rpcbind.service

systemctl restart nfs-server
systemctl restart nfs-lock
systemctl restart nfs-idmap

###################
NFS클라이언트 설치
###################

yum install -y nfs-utils

mkdir -p /mnt/public
mkdir -p /mnt/private

systemctl enable rpcbind
systemctl start rpcbind

showmount -e 10.10.64.66

vi /etc/fstab
10.10.64.66:/nfs/public /mnt/public nfs hard 0 0
10.10.64.66:/nfs/private /mnt/private nfs hard 0 0

mount -a

mkdir -p /vol
ln -s /mnt/public /vol
ln -s /mnt/private /vol

ll /vol/
ll /vol/public/
ll /vol/private/

umount -f /mnt/public
umount -f /mnt/private

yum install -y psmisc
fuser -ck /mnt/data
umount -f /mnt/data




